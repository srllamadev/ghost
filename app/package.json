{
  "name": "ghostpay-app",
  "version": "0.1.0",
  "description": "GhostPay â€” Silent Reusable Payment Addresses for Bitcoin Cash",
  "private": true,
  "type": "module",
  "scripts": {
    "dev":           "vite",
    "build":         "tsc && vite build",
    "preview":       "vite preview",
    "test":          "vitest run",
    "test:watch":    "vitest",
    "lint":          "eslint src --ext .ts,.tsx --report-unused-disable-directives",
    "typecheck":     "tsc --noEmit",
    "electron:dev":  "concurrently \"pnpm dev\" \"wait-on http://localhost:5173 && electron electron/main.ts\"",
    "electron:build":"pnpm build && electron-builder"
  },
  "dependencies": {
    "@cashscript/utils":              "^0.10.0",
    "cashscript":                     "^0.10.0",
    "@bitauth/libauth":               "^3.0.0",
    "@walletconnect/web3wallet":      "^1.13.0",
    "@walletconnect/utils":           "^2.16.0",
    "electrum-cash":                  "^3.2.0",
    "idb":                            "^8.0.0",
    "better-sqlite3":                 "^9.4.3",
    "zustand":                        "^4.5.0",
    "react":                          "^18.3.0",
    "react-dom":                      "^18.3.0",
    "react-router-dom":               "^6.22.0",
    "@radix-ui/react-dialog":         "^1.0.5",
    "@radix-ui/react-toast":          "^1.1.5",
    "lucide-react":                   "^0.344.0",
    "clsx":                           "^2.1.0",
    "tailwind-merge":                 "^2.2.1"
  },
  "devDependencies": {
    "@types/react":                   "^18.3.0",
    "@types/react-dom":               "^18.3.0",
    "@types/better-sqlite3":          "^7.6.8",
    "@types/node":                    "^20.0.0",
    "@vitejs/plugin-react":           "^4.2.1",
    "autoprefixer":                   "^10.4.17",
    "concurrently":                   "^8.2.2",
    "electron":                       "^29.1.0",
    "electron-builder":               "^24.9.1",
    "eslint":                         "^8.57.0",
    "postcss":                        "^8.4.35",
    "tailwindcss":                    "^3.4.1",
    "typescript":                     "^5.4.0",
    "vite":                           "^5.1.4",
    "vitest":                         "^1.3.1",
    "wait-on":                        "^7.2.0"
  },
  "build": {
    "appId":      "io.ghostpay.wallet",
    "productName":"GhostPay",
    "directories": { "output": "dist-electron" },
    "files":      ["dist/**/*", "electron/**/*"],
    "linux":  { "target": ["AppImage", "deb"] },
    "mac":    { "target": "dmg" },
    "win":    { "target": "nsis" }
  }
}
